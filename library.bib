isbn = {0006-8314},
issn = {00068314},
journal = {Boundary-Layer Meteorology},
keywords = {Surface scheme,Urban Canyon,Urban boundary layer,Urban energy balance,Urban water balance},
number = {3},
pages = {357--397},
title = {{A physically-based scheme for the urban energy budget in atmospheric models}},
volume = {94},
year = {2000}
}
