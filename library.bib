file = {:Users/allen/Documents/articles/Hulley, Hughes, Hook{\_}2012{\_}Quantifying uncertainties in land surface temperature and emissivity retrievals from ASTER and MODIS thermal i.pdf:pdf},
isbn = {2156-2202},
issn = {01480227},
journal = {Journal of Geophysical Research Atmospheres},
number = {23},
pages = {1--18},
title = {{Quantifying uncertainties in land surface temperature and emissivity retrievals from ASTER and MODIS thermal infrared data}},
volume = {117},
