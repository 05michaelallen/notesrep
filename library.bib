keywords = {park cool island,park cool islands,scale modelling,surface temperature,thermal admittance,urban climate design,urban parks},
mendeley-tags = {park cool island,scale modelling,surface temperature,thermal admittance},
pages = {287--312},
title = {{Scale modeling of nocturnal cooling in urban parks}},
