issn = {1748-9326},
journal = {Environmental Research Letters},
keywords = {cool pavements,cool roofs,heat mitigation,mean radiant temperature,microclimate,outdoor thermal comfort,vegetative roofs},
number = {2},
pages = {24003},
publisher = {IOP Publishing},
title = {{Micrometeorological simulations to predict the impacts of heat mitigation strategies on pedestrian thermal comfort in a Los Angeles neighborhood}},
