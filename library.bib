keywords = {Annual temperature cycle (ATC),Clear-sky SUHI climatology,Diurnal temperature range,Spatiotemporal patterns,Surface urban heat island (SUHI),Thermal remote sensing},
pages = {1--12},
publisher = {Elsevier Inc.},
