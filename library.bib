isbn = {00344257},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {Downscaling,Land surface temperature,SEVIRI,UHI,Urban heat island},
pages = {114--124},
title = {{Downscaling land surface temperature for urban heat island diurnal cycle analysis}},
volume = {117},
